{{> nav/nav-block home=true}}

<main>
    <div id="index-banner" class="parallax-container">
        <div class="overlay">
        </div>
        <div class="section no-pad-bot">
            <div class="container">
                <br>
                <br>
                <h1 class="caption">Mongo DB Scraper</h1>
                <h5 class="caption header col s12">NEW YORK TIMES EDITION</h5>
                <br>
                <br>
            </div>
        </div>
        <div class="parallax">
            <img src="/assets/img/newspaper.jpg" alt="Unsplashed background img 1" style="max-width: 100%; height: auto;">
        </div>
    </div>
    <div class="article-container">
        {{#if articles}}
        {{#each articles}}
            <div class="card" data-_id={{_id}}>
                <div class="card-content">
                    <span class="card-title">
                        <h3>
                            <a class="article-link" target="_blank" rel="noopener noreferrer" href={{link}}>
                                {{headline}}
                            </a>
                        </h3>
                        <p class="article-summary">{{summary}}</p>
                    </span>
                    <a class="waves-effect waves-light btn save-article" data-_id={{_id}}>Save Article</a>
                </div>
            </div>
        {{/each}}
        {{else}}
            <div class='row'>
                <div class='alert-warning'>
                    <h4>Uh Oh. Looks like we don't have any articles</h4>
                </div>
                <div class='card'>
                    <span class='card-title card-header'>
                        <h3>What would you like to do?</h3>
                    </span>
                    <div class='card-action'>
                        <a class='waves-effect waves-light btn scrape-new'>Scrape New Articles</a>
                        <a href='/saved' class='waves-effect waves-light btn'>Go to Saved Articles</a>
                    </div>
                </div>
            </div>
        {{/if}}
    </div>

</main>

{{> footer/footer}}

